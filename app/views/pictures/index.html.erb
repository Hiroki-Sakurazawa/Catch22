<div class="pictures">
  <% @pictures.each do |picture| %>
    <div class="picture">
      <div class="title-bar">
        <p class="title"><%= picture.title %></p>
      </div>
      <div class="text-bar"><p class="text"><%= picture.text %></p></div>
      <div class="image-info-bar">
        <div class="image-box"><%= image_tag picture.image, class: "picture-image" %></div>
        <div class="info-box">
          <div class="contributor-box">
            <p class="contributor">投稿者</p><p class="contributor-name"><%= picture.user.nickname %></p>
          </div>
          <div class="date-box">
            <p class="date"><%= picture.created_at.strftime('%Y.%m.%d') %></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>