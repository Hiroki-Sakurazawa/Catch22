<div class="pictures">
  <% @pictures.each do |picture| %>
    <div class="picture">
      <div class="title-bar">
        <p class="title"><%= picture.title %></p>
      </div>
      <div class="picture-text-bar">
        <div class="image"><%= image_tag picture.image, class: "picture-image" %></div>
        <div class="text">
          <p class="text"><%= picture.text %></p>
          <p class="contributor"><%= picture.user.nickname %></p>
          <p class="contributor"><%= picture.created_at.strftime('%Y/%m/%d') %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>