<div class="contents">
  <div class="container">
    <h2>新規登録</h2>
    <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <div class='form-text-wrap'>
        <label class="form-text">ニックネーム</label>
        <span class="indispensable">必須</span>
        </div>
        <%= f.text_field :nickname, autofocus: true, class: "input_form" %>
      </div>

      <div class="field">
        <div class='form-text-wrap'>
        <label class="form-text">メールアドレス</label>
        <span class="indispensable">必須</span>
        </div>
        <%= f.email_field :email, class: "input_form" %>
      </div>

      <div class="field">
        <div class='form-text-wrap'>
        <label class="form-text">パスワード</label>
        <span class="indispensable">必須</span>
        </div>
        <%= f.password_field :password, autocomplete: "off", class: "input_form" %>
      </div>

      <div class="field">
        <div class='form-text-wrap'>
        <label class="form-text">パスワード(確認)</label>
        <span class="indispensable">必須</span>
        </div>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "input_form" %>
      </div>

      <div class="actions">
        <%= f.submit "登録" %>
      </div>
    <% end %>
  </div>
</div>  