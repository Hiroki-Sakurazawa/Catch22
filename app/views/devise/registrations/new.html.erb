<div class="contents">
  <div class="container-registration">
    <h2 class="registration">新規登録</h2>
    <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
    <%= render 'shared/error_messages', model: f.object %>

      <div class="field">
        <div class='form-text-wrap'>
        <label class="user-form-text">ユーザーネーム</label>
        <span class="necessary">必須</span>
        </div>
        <%= f.text_field :nickname, autofocus: true, placeholder: "最大6文字まで", class: "user_input_form" %>
      </div>

      <div class="field">
        <div class='form-text-wrap'>
        <label class="user-form-text">メールアドレス</label>
        <span class="necessary">必須</span>
        </div>
        <%= f.email_field :email, class: "user_input_form" %>
      </div>

      <div class="field">
        <div class='form-text-wrap'>
        <label class="user-form-text">パスワード</label>
        <span class="necessary">必須</span>
        </div>
        <%= f.password_field :password, autocomplete: "off", placeholder: "6文字以上の半角英数字", class: "user_input_form" %>
      </div>

      <div class="field">
        <div class='form-text-wrap'>
        <label class="user-form-text">パスワード(確認)</label>
        <span class="necessary">必須</span>
        </div>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "user_input_form" %>
      </div>

      <div>
        <%= f.submit "登録", class: "submit" %>
      </div>
    <% end %>
  </div>
</div>  